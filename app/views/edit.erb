<div class="jumbotron content-center">
  
  <form action="/robots/<%= @robot.id %>" method="post">
    <h1>Edit your robot</h1>
    <div class="form-group">
      <input type="hidden" name="_method" value="PUT" />
      <input type="text" name='robot[name]' value="<%= @robot.name %>" class="form-control"/>
    </div>
    <div class="form-group">
      <input type="text" name='robot[city]' value="<%= @robot.city %>" class="form-control"/>
    </div>
    <div class="form-group">
      <input type="text" name='robot[state]' value="<%= @robot.state %>" class="form-control"/>
    </div>
    <div class="form-group">
      <input type="text" name='robot[department]' value="<%= @robot.department %>" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-default">Commit changes!</button>
  </form>

</div>