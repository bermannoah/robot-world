<div class="container content-center">
    
  <div>  
    <h1><%= @robot.name %></h1>
  </div>
  
  <div>
    <p ><%= @robot.city %></p>
  </div>
  
  <div>
    <p ><%= @robot.state %></p>
  </div>
  
  <div>
    <p ><%= @robot.department %></p>
  </div>
  
  <a class="btn btn-success btn-xs" href="/robots/<%= @robot.id %>/edit">Edit</a>
  <form action="/robots/<%= @robot.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn btn-danger btn-xs" type="submit" value="delete">Delete</button>
  </form>
</div>